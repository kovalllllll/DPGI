<Window x:Class="lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <LinearGradientBrush x:Key="LinearPanelBrush" StartPoint="0,0.5" EndPoint="1,0.5">
            <GradientStop Color="Yellow" Offset="0.0" />
            <GradientStop Color="Cyan" Offset="0.5" />
            <GradientStop Color="Yellow" Offset="1.0" />
        </LinearGradientBrush>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="5" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="White" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True">


        <Border DockPanel.Dock="Top"
                BorderBrush="#FFCBBEBE"
                BorderThickness="2"
                CornerRadius="10"
                Background="{StaticResource LinearPanelBrush}">


            <StackPanel Orientation="Horizontal" Margin="5">
                <Button Width="40" Height="40" ToolTip="Відкрити" Command="Open">
                    <Image Source="images/open.png" />
                </Button>

                <Button Width="40" Height="40" ToolTip="Стерти" Command="Delete">
                    <Image Source="images/clean.png" />
                </Button>


                <Button Width="40" Height="40" ToolTip="Копіювати"
                        Command="Copy"
                        CommandTarget="{Binding ElementName=txtEditor}">
                    <Image Source="images/copy.png" />
                </Button>

                <Button Width="40" Height="40" ToolTip="Вставити"
                        Command="Paste"
                        CommandTarget="{Binding ElementName=txtEditor}">
                    <Image Source="images/paste.png" />
                </Button>
            </StackPanel>
        </Border>

        <Border BorderBrush="#FFCBBEBE"
                BorderThickness="2"
                CornerRadius="10"
                Background="{StaticResource LinearPanelBrush}">

            <DockPanel Margin="10" LastChildFill="True">

                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center"
                            Margin="0,10,0,0">

                    <Label Content="Розмір шрифту:" VerticalAlignment="Center" />

                    <Slider Name="fontSlider"
                            Width="150"
                            VerticalAlignment="Center"
                            Margin="5,0,10,0"
                            MinWidth="100"
                            Maximum="100"
                            Minimum="12"
                            Value="14"
                            IsSnapToTickEnabled="True" TickFrequency="1" />

                    <TextBlock Text="{Binding ElementName=fontSlider, Path=Value}"
                               VerticalAlignment="Center" Margin="0,0,10,0" Width="20" />

                    <Button Content="OK"
                            Width="80" Height="25"
                            Style="{x:Null}"
                            Command="Save" />
                </StackPanel>

                <TextBox x:Name="txtEditor"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Visible"
                         FontSize="{Binding ElementName=fontSlider, Path=Value}" />
            </DockPanel>
        </Border>

    </DockPanel>
</Window>